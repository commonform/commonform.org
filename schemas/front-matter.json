{
  "type": "object",
  "additionalProperties": false,
  "required": ["published", "digest"],
  "properties": {
    "title": {
      "type": "string",
      "minLength": 3
    },
    "published": {
      "type": "string",
      "format": "date"
    },
    "digest": {
      "type": "string",
      "pattern": "^[a-f0-9]{64}$"
    },
    "license": {
      "enum": [
        "CC0-1.0",
        "CC-BY-4.0",
        "kemitchell/law-form-license/1e",
        "kemitchell/tiny-verbatim-license/1e",
        "waypoint/waypoint-license/1e",
        "blueoakcouncil/model-permission/1e"
      ]
    },
    "defaults": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "numbering": {
      "enum": ["outline", "decimal"]
    },
    "notes": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "string",
        "minLength": 1
      }
    },
    "semver": {
      "type": "boolean"
    },
    "signaturePages": {
      "type": "array"
    }
  }
}
